<div class="text-center">
  <%= link_to "Shady Cocktails", cocktails_path, class: "nav-link navbar-title" %>
  <button type="button" class="btn navbar-btn rounded-pill" data-toggle="modal" data-target="#drinkModal">
    Add New Drink
  </button>

  <!-- MODAL FOR NEW DRINK -->
  <div class="modal fade" id="drinkModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add New Drink</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= simple_form_for @cocktail do |f| %>
              <%= f.input :name %>
              <%= f.button :submit %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>
