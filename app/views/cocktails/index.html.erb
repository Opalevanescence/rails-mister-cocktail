<h1>Cocktails</h1>
<ul>
  <% @cocktails.each do |cocktail| %>
    <ul>
      <li><%= cocktail.name %></li>
      <% cocktail.doses.each do |dose| %>
        <div>
          <li><%= dose.description %></li>
          <li><%= dose.ingredient.name %></li>
          <li><%= link_to 'Delete', dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} %></li>
        </div>
      <% end %>
      <li><%= link_to 'Add new dose', new_cocktail_dose_path(cocktail) %></li>
      <br>
    </ul>
  <% end %>
</ul>
